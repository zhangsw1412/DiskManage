<?php

/**
 * 首页控制器
 */
Class AnliAction extends Action{
  /**
   * 首页视图
   * @return [type] [description]
   */
	public function index(){
		
		$anli=M('case');
		$result=$anli->find(10);
		$data=array(
			'id'=>$result['id'],
			'title'=>$result['title'],
			'key_words'=>$result['key_words']
		);
		
		$this->assign('goodAnli',$data);
		$this->assign('menuName1','案例库');
		$this->assign('menuUrl1','/Anli/index');
		$this->display();
	}
	
	public function info(){
		$anli=M('case');
		$result=$anli->where(array('id'=>I('get.anliid')))->select();
		
		//p($result);die;
		$this->assign('anliInfo',$result[0]);
		$this->assign('menuName1','案例库');
		$this->assign('menuUrl1','/Anli/index');
		$this->display();
	}
}

?>