	<script>
		var outputLabel=$("#showMessage");
		
		//搜索百科内容
		function searchBaike(){
			var keyword=$("#inputMessage").val();
			var url=$("#inputUrl").val();
			$.ajax({
				url:"searchBaike.php?keyword="+keyword+"&url="+url,
				success:function(res){
					outputLabel.html(res);
				},
				error:function(res){
					outputLabel.html(res);
				}
			});
			$("#inputMessage").focus();
		}
	</script>
