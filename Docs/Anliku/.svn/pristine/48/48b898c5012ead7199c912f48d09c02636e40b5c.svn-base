<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<css file='__PUBLIC__/css/public.css'/>
	<js file='__PUBLIC__/js/jquery-2.1.4.min.js'/>
	<js file='__ROOT__/Data/Ueditor/ueditor.config.js'/>
	<js file='__ROOT__/Data/Ueditor/ueditor.all.js'/>
	<script type="text/javascript">
		window.UEDITOR_HOME_URL='__ROOT__/Data/Ueditor/';
		window.onload=function(){
			window.UEDITOR_CONFIG.initialFrameHeight=200;
			window.UEDITOR_CONFIG.initialFrameWidth=900;
			window.UEDITOR_CONFIG.savePath= ['upload'];
			window.UEDITOR_CONFIG.imageUrl="{:U(GROUP_NAME.'/Case/upload')}";
			window.UEDITOR_CONFIG.imagePath='__ROOT__/Uploads/';
			UE.getEditor('summary');
		}

		function checkCate()
		{
			if($('#cid').val()==0)
			{
				alert("请选择分类");
				return false;
			}
			return true;
		}
	</script>
	<title>Document</title>
</head>
<body>
	<form action="{:U(GROUP_NAME.'/Case/addCase')}" method="post" onsubmit="return checkCate(this)">
		<table class="table">
			<tr>
				<th colspan="2">案例发布</th>
			</tr>
			<tr>
				<td align="right">案例标题:</td>
				<td><input type="text" name="title"></td>
			</tr>
			<tr>
				<td align="right" width="10%">所属分类:</td>
				<td>
					<select name="cid" id="cid">
						<option value="0">===请选择分类===</option>
						<foreach name="cate" item="v">
							<option value="{$v.id}">{$v.html}{$v.name}</option>
						</foreach>
					</select>
				</td>
			</tr>
			<!-- <tr>
				<td align="right">案例属性:</td>
				<td>
					<foreach name="attr" item="v">
						<label style="margin-right:10px;">
							<input type="checkbox" name="aid[]" value="{$v.id}">&nbsp;{$v.name}
						</label>
					</foreach>
				</td>
			</tr>
			<tr>
				<td align="right">点击次数:</td>
				<td><input type="text" name="click" value="0"></td>
			</tr> -->
			<tr>
				<td align="right">作者:</td>
				<td><input type="text" name="author"></td>
			</tr>
			<tr>
				<td align="right">单位:</td>
				<td><input type="text" name="department"></td>
			</tr>
			<tr>
				<td align="right">案例关键词:</td>
				<td><input type="text" name="key_words"></td>
			</tr>
			<tr>
				<td align="right">适用课程:</td>
				<td><input type="text" name="course"></td>
			</tr>
			<tr>
				<td align="right">案例摘要:</td>
				<td>
					<textarea name="summary" id="summary" cols="30" rows="10"></textarea>
				</td>
			</tr>
			<tr>
				<td align="right">正文文件:</td>
				<td></td>
			</tr>
			<tr>
				<td align="right">说明文件:</td>
				<td></td>
			</tr>
			<tr>
				<td align="right">附件:</td>
				<td></td>
			</tr>
			<tr>
				<td align="right">正文文件:</td>
				<td></td>
			</tr>
			<tr>
				<td align="right">图片:</td>
				<td></td>
			</tr>
			<tr>
				<td align="center" colspan="2"><input type="submit" value="保存添加"></td>
			</tr>
		</table>
	</form>
</body>
</html>