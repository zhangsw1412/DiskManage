	<div class="page-header">
		<h4>个人中心</h4>
	</div>
	<div class="col-md-2">
		<ul class="nav nav-pills nav-stacked">
		   <li id="pagemenu1"><a href="javascript:page(1)">账号信息</a></li>
		   <li id="pagemenu2"><a href="javascript:page(2)">修改密码</a></li>
		   <li id="pagemenu3"><a href="javascript:page(3)">注销账户</a></li>
		</ul>
	</div>
	<div class="col-md-10">
		<div id="page1">
			<dl class="dl-horizontal">
			
				<dt>用户名：</dt>
				<dd>{$userinfo.username}</dd>
				<br>
				
				<dt>上次登录时间：</dt>
				<dd>{$userinfo.login_time|date="Y-m-d H:i",###}</dd>
				<br>
				
				<dt>上次登录IP：</dt>
				<dd>{$userinfo.login_ip}</dd>
				<br>
				
				<dt>用户状态：</dt>
				<dd>
				<if condition="$userinfo.valid eq 1">
					正常
				<else/>
					已停用
				</if>
				</dd>
				<br>
				
			</dl>
		</div>
		<div id="page2">
			<form class="form-horizontal" role="form" method="post" action={:U(GROUP_NAME."/Userinfo/changePassword")} >
			  <div class="form-group">
				<label for="inputPassword" class="col-sm-2 control-label">当前密码</label>
				<div class="col-sm-10">
				  <input type="password" class="form-control" name="oldpw" 
					 placeholder="旧密码">
				</div>
			  </div>
			  <div class="form-group">
				<label for="inputPassword" class="col-sm-2 control-label">新密码</label>
				<div class="col-sm-10">
				  <input type="password" class="form-control" name="newpw" 
					 placeholder="新密码">
				</div>
			  </div>
			    <div class="form-group">
				  <div class="col-sm-offset-2 col-sm-10">
					 <button type="submit" class="btn btn-default">确认修改</button>
				  </div>
			   </div>
			</form>
		</div>
		<div id="page3">
			<div class="alert alert-warning">
			   <strong>警告！</strong>如果注销您的账户，您将无法使用此账户登录案例库系统。
			</div>
			<form class="form-horizontal" role="form" method="get" action={:U(GROUP_NAME."/Userinfo/logoff")} onsubmit="return confirmLogoff()" >
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-warning">注销用户</button>
				</div>
			</form>
		</div>
	</div>
	<script>
		function page(num){
			if(num==1){
				$("#page1").show();
				$("#page2").hide();
				$("#page3").hide();
				$("#pagemenu1").addClass('active');
				$("#pagemenu2").removeClass('active');
				$("#pagemenu3").removeClass('active');
			}else if(num==2){
				$("#page1").hide();
				$("#page2").show();
				$("#page3").hide();
				$("#pagemenu1").removeClass('active');
				$("#pagemenu2").addClass('active');
				$("#pagemenu3").removeClass('active');
			}else if(num==3){
				$("#page1").hide();
				$("#page2").hide();
				$("#page3").show();
				$("#pagemenu1").removeClass('active');
				$("#pagemenu2").removeClass('active');
				$("#pagemenu3").addClass('active');
			}
		}
		
		page(1);
		
		function confirmLogoff(){
			return confirm("真的要注销此账号吗？");
		}
	</script>