</div>
<div class="col-md-10 col-lg-10 col-ms-10 col-xs-10">

		<foreach name="list" item="anli">
		<div class="panel panel-primary">
			<div class="panel-body">
			<a href={:U(GROUP_NAME."/Anli/info?anliid=".$anli['id'])} >
				<div class="col-md-12 col-lg-12 col-ms-12 col-xs-12">
					<h4 class="list-group-item-heading">
						{$anli.title|htmlspecialchars_decode}
					</h4>
				</div>
				<div class="col-md-2 col-lg-2 col-ms-2 col-xs-2">
					<if condition="strlen($anliInfo['pic_url']) lt 1" >
						<img style="width:80px;height:80px;" src="__PUBLIC__/images/default.png")}></img>
					<else />
						<img style="width:80px;height:80px;" src={:U(__ROOT__."/".$anliInfo['pic_url'])}></img>
					</if>
				</div>
				<div class="col-md-5 col-lg-5 col-ms-5 col-xs-5">
					<p class="list-group-item-text">
						<dl class="dl-horizontal">
						  <dt>作者：</dt>
						  <dd>{$anli.author|htmlspecialchars_decode}</dd>
						  <dt>作者单位：</dt>
						  <dd>{$anli.department|htmlspecialchars_decode}</dd>
						  <dt>关键词：</dt>
						  <dd>{$anli.key_words|htmlspecialchars_decode}</dd>
						</dl>
					</p>
				</div>
				<div class="col-md-5 col-lg-5 col-ms-5 col-xs-5">
					<p class="list-group-item-text">
						<dl class="dl-horizontal">
						  <dt>专业领域：</dt>
						  <dd>{$anli.cate|htmlspecialchars_decode}</dd>
						  <dt >简介：</dt>
						  <dd style="word-break:break-all;">{$anli.summary}</dd>
						</dl>
					</p>
				</div>
			</div>
			</a>
		</div>
